<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAE4"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"

    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/main_toolbar"
            android:background="#FFFFFC"></include>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFCFC"
            android:orientation="vertical">

            <Button
                android:id="@+id/Rdep"
                android:layout_width="136dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="37dp"
                android:layout_marginEnd="38dp"
                android:layout_marginRight="38dp"
                android:onClick="AddDep"
                android:text="+ Depense"
                app:backgroundTint="#CC1414"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/Rrev"
                android:layout_width="136dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="38dp"
                android:layout_marginEnd="244dp"
                android:layout_marginRight="244dp"
                android:onClick="AddRev"
                android:text="+ Revenu "
                app:backgroundTint="#8BC34A"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="118dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_two" />

            <ImageView
                android:id="@+id/prof"
                android:layout_width="79dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="662dp"
                android:layout_marginEnd="295dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="295dp"
                android:layout_marginStart="29dp"
                />

            <RelativeLayout
                android:layout_width="254dp"
                android:layout_height="118dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="363dp"
                android:layout_marginEnd="82dp"
                android:layout_marginRight="82dp"
                android:background="@drawable/revenu_back"
                android:elevation="16dp">


                <TextView
                    android:id="@+id/totalrev"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="23dp"
                    android:fontFamily="@font/anton"
                    android:text="0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:fontFamily="sans-serif-black"
                    android:text="DH"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="69dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="38dp"
                    android:layout_marginEnd="155dp"
                    android:layout_marginRight="155dp"
                    android:fontFamily="@font/allerta"
                    android:text="Total revenu"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="254dp"
                android:layout_height="118dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="207dp"
                android:layout_marginEnd="83dp"
                android:layout_marginRight="83dp"
                android:background="@drawable/depense_back"
                android:elevation="16dp">

                <TextView
                    android:layout_width="83dp"
                    android:layout_height="47dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="62dp"
                    android:layout_marginEnd="155dp"
                    android:layout_marginRight="155dp"
                    android:fontFamily="@font/allerta"
                    android:text="Total depense"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/totaldep"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="27dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:fontFamily="@font/anton"
                    android:text="0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="28dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:fontFamily="sans-serif-black"
                    android:text="DH"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="254dp"
                android:layout_height="118dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="511dp"
                android:layout_marginEnd="85dp"
                android:layout_marginRight="85dp"
                android:background="@drawable/save_back"
                android:elevation="16dp">

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
